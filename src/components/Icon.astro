---
import ArrowLeft from '../assets/icons/arrow-left.svg';
import ArrowRight from '../assets/icons/arrow-right.svg';
import Bluesky from '../assets/icons/bluesky.svg';
import CodePen from '../assets/icons/codepen.svg';
import Dev from '../assets/icons/dev.svg';
import Facebook from '../assets/icons/facebook.svg';
import GitHub from '../assets/icons/github.svg';
import Instagram from '../assets/icons/instagram.svg';
import LinkedIn from '../assets/icons/linkedin.svg';
import Mastodon from '../assets/icons/mastodon.svg';
import Medium from '../assets/icons/medium.svg';
import Reddit from '../assets/icons/reddit.svg';
import X from '../assets/icons/x.svg';
import YouTube from '../assets/icons/youtube.svg';

const iconMap: { [key: string]: any } = {
    'arrow-left': ArrowLeft,
    'arrow-right': ArrowRight,
    bluesky: Bluesky,
    codepen: CodePen,
    dev: Dev,
    facebook: Facebook,
    github: GitHub,
    instagram: Instagram,
    linkedin: LinkedIn,
    mastodon: Mastodon,
    medium: Medium,
    reddit: Reddit,
    x: X,
    youtube: YouTube
};

type Props = {
    icon: keyof typeof iconMap;
    class?: string;
};

const { icon, class: className } = Astro.props;

const IconComponent = iconMap[icon];
---

{IconComponent && <IconComponent class={className} />}
