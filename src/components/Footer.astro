---
import siteConfig from '../data/site-config';
import SocialLink from './SocialLink.astro';

const socialLinks = siteConfig.socialLinks ?? [];
const secondaryNavLinks = siteConfig.secondaryNavLinks ?? [];
const currentYear = new Date().getFullYear();
---

<footer class="px-4 py-8 sm:px-8 sm:py-12">
    {
        secondaryNavLinks.length > 0 && (
            <nav class="flex flex-wrap justify-center w-full max-w-3xl mx-auto mb-6 gap-x-6 gap-y-1" aria-label="Footer navigation">
                {secondaryNavLinks.map((link) => (
                    <a class="transition text-slate-700 hover:text-slate-500" href={link.href}>
                        {link.text}
                    </a>
                ))}
            </nav>
        )
    }
    {
        socialLinks.length > 0 && (
            <div class="flex flex-wrap justify-center w-full max-w-3xl mx-auto mb-6 gap-x-4 gap-y-3">
                {socialLinks.map((link) => (
                    <SocialLink {...link} class="hover:bg-primary hover:shadow-button bg-slate-50 text-slate-700 hover:text-white" />
                ))}
            </div>
        )
    }
    <p class="text-xs tracking-wider text-center uppercase text-slate-700">
        &copy; {currentYear}
        <a class="underline text-primary hover:no-underline" href="/">{siteConfig.title}</a>. Created with Astro.js &
        <a class="underline text-primary hover:no-underline" href="https://justgoodui.com/astro-themes/ovidius/"> Ovidius theme</a>.
    </p>
</footer>
